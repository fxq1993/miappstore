<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="AppTheme.NotitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <!-- 菜单字体大小-->
    <style name="MenuTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyHorizontalProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="DetailScreenshot">
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">310dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>
